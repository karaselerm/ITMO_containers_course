FROM python:3.11-slim

LABEL description="GOOD DOCKERFILE"

WORKDIR /app




RUN useradd -m appuser

COPY requirements.txt .
RUN pip install -r requirements.txt --no-cache-dir 

COPY app/ .

USER appuser

EXPOSE 8000

CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]